<script src="/js/grade/excluir.js"></script>

<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <h4 class="text-primary">Grades</h4>

        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" id="ckTodos"></th>
                    <th>Turma</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0; i < lista_grades.length; i++){%>
                    <tr>
                        <td><input type='checkbox' class='check_del' data-id="<%= lista_grades[i].id%>" data-name="<%= lista_grades[i].id_turma%>"></td>
                        <td><%= lista_grades[i].turma%></td>
                        <td>
                            <a href="/grade/editar/<%= lista_grades[i].id_grade%>" class="btn btn-primary">
                                Ver/Editar
                            </a>
                            <button class="btn btn-danger excluir" data-id="<%= lista_grades[i].id_grade%>" data-name="<%= lista_grades[i].turma%>">Excluir</button>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <div>
            <a href="/grade/cadastrar" class="btn btn-primary">Cadastrar Grade</a>
            <input type="button" class="btn btn-danger" value="excluir selecionados" id="btnExcluirSelecionados">
        </div>
    </section>
</div>
<!-- Content End -->