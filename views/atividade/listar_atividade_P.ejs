<script src="/js/atividade/excluir.js"></script>
<script src="/js/atividade/listar.js"></script>


<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <h4 class="text-primary">Atividades</h4>

        <hr>

        <h4 class="text-primary">filtro</h4>                
        <div class="form-group form-row">            
            <div class="col-md-5">
                <input id="input-filtro" class="form-control" type="text" placeholder="Nro ou nome da atividade"/>                
            </div>            
            <div class="col-md-3">
                <button id="btn-filtrar" href="/atividade/filtar" class="btn btn-info"><i class="fas fa-search"></i></button>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" id="ckTodos"></th>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Data Inicio</th>
                    <th>Data Final</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="corpoTabelaQuadro">
                <%for(let i=0; i < lista_atividades.length; i++){%>
                    <tr>
                        <td><input type='checkbox' class='check_del' data-id="<%= lista_atividades[i].id_atividades%>" data-name="<%= lista_atividades[i].nome%>"></td>
                        <td><%= lista_atividades[i].id_atividades%></td>
                        <td><%= lista_atividades[i].nome%></td>
                        <td><%= lista_atividades[i].dt_inicio.toLocaleDateString('pt-BR') %></td>
                        <td><%= lista_atividades[i].dt_final.toLocaleDateString('pt-BR') %></td>
                        <td>
                            <% if(lista_atividades[i].id_quadro == null) {%>
                                <a href="" class="btn btn-info disabled">Ver mais</a>
                            <% } else { %>
                                <a href="/atividade/ver_mais_P/<%= lista_atividades[i].id_atividades%>" class="btn btn-info">Ver mais</a>
                            <% } %>
                                 
                                    
                            <a href="/atividade/editar/<%= lista_atividades[i].id_atividades%>" class="btn btn-primary">
                                Editar
                            </a>
                            <button class="btn btn-danger excluir" data-id="<%= lista_atividades[i].id_atividades%>" data-name="<%= lista_atividades[i].nome%>">Excluir</button>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <div>
            <a href="/atividade/cadastrar" class="btn btn-primary">Cadastrar Atividade</a>
            <!-- <input type="button" class="btn btn-danger" value="excluir selecionados" id="btnExcluirSelecionados"> -->
        </div>
    </section>
</div>
<!-- Content End -->