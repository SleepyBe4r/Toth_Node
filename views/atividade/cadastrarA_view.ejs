
<script src="/js/validacao.js"></script>
<script src="/js/atividade/cadastro.js"></script>

    <input type="hidden" value="<%= atividade_para_alterar%>" id="hidden_ano_letivo"> 
    <%if (typeof atividade_para_alterar == "undefined") {%>
        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Cadastrar Atividade</h4>
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <%for(let i = 0; i < lista_Disciplina.length; i++){%>
                        <select id="slctDisciplina" class="custom-select" required>
                            <option value="" selected disabled>Selecione uma disciplina</option>
                            <option value="<%= lista_Disciplina[i[.id_disciplina%>"><%= lista_Disciplina[i[.nome%></option>
                        </select>
                        <%}%>
                        <label for="slctDisciplina" class="form-label">Nome da Atividade * </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtNomeAtividade" placeholder="Atividade 1" required disabled>
                        <label for="txtNomeAtividade" class="form-label">Nome da Atividade * </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtdescricao"  required>
                        <label for="txtdescricao" class="form-label">Descrição * </label>
                    </div>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_enviar">Enviar Atividade</button>
                <a href="/professor" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 

    <%} else{%>

        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Editar Ano Letivo</h4>
                
                    <input type="hidden" value="<%= atividade_para_alterar.id%>" id="hidden_id">

                    <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtAnoTurma" placeholder="2024" value="<%= atividade_para_alterar.ano_letivo%>" required>
                        <label for="txtAnoTurma" class="form-label">Ano * </label>
                    </div>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_atualizar">Finalizar Edição</button>
                <a href="/ano_letivo" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 
    <%}%>
