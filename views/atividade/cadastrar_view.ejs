
<script src="/js/validacao.js"></script>
<script src="/js/atividade/cadastro.js"></script>

    <input type="hidden" value="<%= atividade_para_alterar%>" id="hidden_atividade"> 
    <%if (typeof atividade_para_alterar == "undefined") {%>
        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Cadastrar Atividade</h4>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <select id="slctDisciplina" class="custom-select" required>
                            <option value="" selected disabled>Selecione uma disciplina</option>
                            <%for(let i = 0; i < lista_Disciplina.length; i++){%>
                                <option value="<%= lista_Disciplina[i].id%>"><%= lista_Disciplina[i].nome%></option>
                            <%}%>
                        </select>
                        <label for="slctDisciplina" class="form-label">Disciplina * </label>
                    </div>
                    <div class="col-md-6 mb-3">
                            <select id="slctTurma" class="custom-select" required disabled>
                                <option value="" selected disabled>Selecione uma Disciplina</option>
                            </select>
                        <label for="slctTurma" class="form-label">Turma * </label>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="text" class="form-control" id="txtNomeAtividade" placeholder="Atividade 1" required disabled>
                        <label for="txtNomeAtividade" class="form-label">Nome da Atividade * </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 mb-3">
                        <textarea class="form-control" id="txtDescricao" disabled></textarea>
                        <label for="txtDescricao" class="form-label">Descrição * </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtNota" disabled>
                        <label for="txtNota" class="form-label">Nota * </label>
                    </div>
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtPeso" disabled>
                        <label for="txtPeso" class="form-label">Peso * </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="date" class="form-control" id="dtInicial" disabled>
                        <label for="dtInicial" class="form-label">Data Inicial * </label>
                    </div>
                    <div class="col-md-3 mb-3">
                        <input type="date" class="form-control" id="dtFinal" disabled>
                        <label for="dtFinal" class="form-label">Data Final * </label>
                    </div>
                    <label id="erro_dt" class="form-label text-danger"></label>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_cadastro">Enviar Atividade</button>
                <button type="submit" class=" btn btn-primary invisible" id="btn_responder">Finalizar Edição</button>
                <a href="/atividade" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 

    <%} else{%>

        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Editar Ano Letivo</h4>
                
                    <input type="hidden" value="<%= atividade_para_alterar.id%>" id="hidden_id">

                    <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtAnoTurma" placeholder="2024" value="<%= atividade_para_alterar.ano_letivo%>" required>
                        <label for="txtAnoTurma" class="form-label">Ano * </label>
                    </div>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_atualizar">Finalizar Edição</button>
                <a href="/ano_letivo" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 
    <%}%>
