<script src="/js/atividade/cadastro.js"></script>

<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <div class="row">
            <input type="hidden" name="hidden_id_atividade" id="hidden_id_atividade" value="<%= lista_atividades[0].id%>">
            <div class="col-md-12 mb-3">
                <h3 for="slctDisciplina">Atividade - <%= lista_atividades[0].nome%></h3>
            </div>
            <div class="col-md-12 mb-3">
                <textarea class="form-control" id="txtDescricao" disabled><%= lista_atividades[0].descricao%></textarea>
                <label for="txtDescricao" class="form-label">descrição</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 mb-3">
                <textarea class="form-control" id="txtResposta"></textarea>
                <label for="txtResposta" class="form-label">resposta * </label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label class="form-label">Observações Gerais: </label>
                <label class="form-label">valor: <%= lista_atividades[0].nota%></label>
                <label class="form-label">peso: <%= lista_atividades[0].peso%>%</label>
                <label class="form-label">Data Inicial: <%= lista_atividades[0].dt_inicio%>%</label>
                <label class="form-label">Data Final: <%= lista_atividades[0].dt_final%>%</label>
            </div>
        </div>
        
        <div>
            <button type="submit" class=" btn btn-primary" id="btn_responder">Entregar Atividade</button>
            <button type="submit" class="invisible" id="btn_cadastro"></button>
            <button type="submit" class="invisible" id="slctDisciplina"></button>
            <button type="submit" class="invisible" id="slctTurma"></button>
        </div>
    </section>
</div>
<!-- Content End -->