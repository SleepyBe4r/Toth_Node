

<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <h4 class="text-primary">Atividades</h4>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID da Atividade</th>
                    <th>Titulo</th>
                    <th>Abre em</th>
                    <th>Finaliza em</th>
                    <th>Disciplina</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0; i < lista_atividades.length; i++){%>
                    <tr>
                        <td><%= lista_atividades[i].id_nota%></td>
                        <td><%= lista_atividades[i].nome%></td>
                        <td><%= new Date(lista_atividades[i].dt_inicio).toLocaleString('pt-BR').split(",")[0];%></td>
                        <td><%= new Date(lista_atividades[i].dt_final).toLocaleString('pt-BR').split(",")[0];%></td>
                        <td><%= lista_atividades[i].disciplina%></td>
                        <td>
                            <a href="/atividade/ver_mais_A/<%= lista_atividades[i].id_nota%>" class="btn btn-info">Ver mais</a>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>
    </section>
</div>
<!-- Content End -->