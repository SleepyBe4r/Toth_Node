

<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <h4 class="text-primary">Atividades</h4>

        <div class="mt-3" id="accordion">
            <% lista_disciplina_aluno.map((disciplina, index) => { %>
                <div class="card">
                    <div class="card-header" id="heading<%= index %>">
                    <h5 onclick="this.querySelector('.fa-chevron-down').classList.toggle('fa-rotate-180')" class="mb-0 row" style="cursor: pointer;" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                        <div class="col-1">
                            <i class="fas fa-book"></i>
                        </div>
                        <div class="col-7 pl-0">
                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                                <%= disciplina %>
                            </button>
                        </div>
                        <div class="col-4 text-right">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </h5>    </div>
                    <div id="collapse<%= index %>" class="collapse" aria-labelledby="heading<%= index %>" data-parent="#accordion">
                        <div class="card-body">                            
                            <%for(let i=0; i < lista_atividades.length; i++){%>
                                <% if(lista_atividades[i].disciplina == disciplina) {%>
                                <div class="row">
                                    <div class="col-1">
                                        <i class="fas fa-upload"></i>
                                    </div>
                                    <div class="col-6 pl-0">
                                        <a href="/atividade/ver_mais_A/<%= lista_atividades[i].id_nota%>"><%= lista_atividades[i].nome%></a>
                                    </div>
                                    <div class="col-5">
                                        <span class="badge badge-pill badge-warning font-weight-bold px-3 py-2" style="font-size: 1rem;">
                                            <i class="far fa-calendar-alt mr-1"></i>
                                            per√≠odo: 
                                            <% 
                                                const meses = ["jan", "fev", "mar", "abr", "mai", "jun", "jul", "ago", "set", "out", "nov", "dez"];
                                                const dtInicio = new Date(lista_atividades[i].dt_inicio);
                                                const dtFinal = new Date(lista_atividades[i].dt_final);
                                                const inicioFormatado = `${dtInicio.getDate()}/${meses[dtInicio.getMonth()]}/${dtInicio.getFullYear()}`;
                                                const finalFormatado = `${dtFinal.getDate()}/${meses[dtFinal.getMonth()]}/${dtFinal.getFullYear()}`;
                                            %>
                                            <span class="text-dark"><%= inicioFormatado %> a <%= finalFormatado %></span>
                                        </span>
                                    </div>    <%}%>
                            <%}%>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
</div>
<!-- Content End -->