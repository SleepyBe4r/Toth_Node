<!-- Content Start -->
<div class="col-md-9">
  <section id="professores" class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="text-primary">Gerenciamento de Professores</h4>
      <a href="/admin/professores/cadastrar" class="btn btn-primary">
        <i class="fas fa-plus"></i> Cadastrar Professor
      </a>
    </div>
    
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>CPF</th>
            <th>Nome</th>
            <th>Titulação</th>
            <th>Data Admissão</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (professores && professores.length > 0) { %>
            <% professores.forEach(professor => { %>
              <tr>
                <td><%= professor.cpf %></td>
                <td><%= professor.nome || 'N/A' %></td>
                <td><%= professor.titulacao || 'N/A' %></td>
                <td><%= professor.dataAdmissao ? new Date(professor.dataAdmissao).toLocaleDateString('pt-BR') : 'N/A' %></td>
                <td>
                  <a href="/admin/professores/editar/<%= professor.cpf %>" class="btn btn-sm btn-warning">
                    <i class="fas fa-edit"></i> Editar
                  </a>
                  <form action="/admin/professores/excluir" method="POST" style="display: inline;">
                    <input type="hidden" name="cpf" value="<%= professor.cpf %>">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este professor?')">
                      <i class="fas fa-trash-alt"></i> Excluir
                    </button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center">Nenhum professor cadastrado</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>
</div>
<!-- Content End -->
