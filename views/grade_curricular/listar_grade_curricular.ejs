<script src="/js/ano_letivo/excluir.js"></script>

<!-- Main Section -->
<div class="col-md-9">
    <section class="mb-5">
        <h4 class="text-primary">Grades Curriculares</h4>

        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th><input type="checkbox" id="ckTodos"></th>
                    <th>ID</th>
                    <th>Turma</th>
                    <th>Disciplina</th>
                    <th>Professor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0; i < lista_grades.length; i++){%>
                    <tr>
                        <td><input type='checkbox' class='check_del' data-id="<%= lista_grades[i].id%>" data-name="<%= lista_grades[i].id_turma%>"></td>
                        <td><%= lista_grades[i].id%></td>
                        <td><%= lista_grades[i].id_turma%></td>
                        <td><%= lista_grades[i].id_disciplina%></td>
                        <td><%= lista_grades[i].cpf_professor%></td>
                        <td>
                            <a href="/grade_curricular/editar/<%= lista_grades[i].id%>" class="btn btn-primary">
                                Editar
                            </a>
                            <button class="btn btn-danger excluir" data-id="<%= lista_grades[i].id%>" data-name="<%= lista_grades[i].ano_letivo%>">Excluir</button>
                        </td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <div>
            <a href="/grade_curricular/cadastrar" class="btn btn-primary">Cadastrar Grade Curricular</a>
            <input type="button" class="btn btn-danger" value="excluir selecionados" id="btnExcluirSelecionados">
        </div>
    </section>
</div>
<!-- Content End -->