<!-- Content Start -->
<div class="col-md-9">
  <section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="text-primary">Lista de Professores</h4>
      <a href="/admin/professores/cadastrar" class="btn btn-primary">
        <i class="fas fa-plus"></i> Novo Professor
      </a>
    </div>
    
    <div class="card shadow">
      <div class="card-body">
        <% if (professores && professores.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>CPF</th>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Telefone</th>
                  <th>Titulação</th>
                  <th>Data de Admissão</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% professores.forEach(function(professor) { %>
                  <tr>
                    <td><%= professor.cpf %></td>
                    <td><%= professor.nome %></td>
                    <td><%= professor.email %></td>
                    <td><%= professor.fone %></td>
                    <td><%= professor.titulacao %></td>
                    <td><%= new Date(professor.dataAdmissao).toLocaleDateString('pt-BR') %></td>
                    <td>
                      <a href="/admin/professores/editar/<%= professor.cpf %>" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Editar
                      </a>
                      <button type="button" class="btn btn-sm btn-danger btn-excluir" 
                              data-cpf="<%= professor.cpf %>" 
                              data-nome="<%= professor.nome %>">
                        <i class="fas fa-trash-alt"></i> Excluir
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info">
            Nenhum professor cadastrado.
          </div>
        <% } %>
      </div>
    </div>
  </section>
</div>

<!-- Script para listagem de professores -->
<script src="/js/professores/listar.js"></script>
<!-- Content End -->
