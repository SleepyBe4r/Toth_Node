
<script src="/js/validacao.js"></script>
<script src="/js/ano_letivo/cadastro.js"></script>

    <input type="hidden" value="<%= ano_letivo_para_alterar%>" id="hidden_ano_letivo"> 
    <%if (typeof ano_letivo_para_alterar == "undefined") {%>
        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Cadastrar Ano Letivo</h4>
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtAno" placeholder="2024" required>
                        <label for="txtAno" class="form-label"><strong>Ano: *</strong> </label>
                    </div>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_cadastro">Finalizar cadastro</button>
                <a href="/ano_letivo" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 

    <%} else{%>

        <!-- Main Section -->
        <div class="col-md-9">
            <!-- Formulário de Lançamento -->
            <section id="form_notas" class="mb-5">
                <h4 class="text-primary">Editar Ano Letivo</h4>
                
                    <input type="hidden" value="<%= ano_letivo_para_alterar.id%>" id="hidden_id">

                    <div class="row">
                    <div class="col-md-3 mb-3">
                        <input type="number" class="form-control" id="txtAno" placeholder="2024" value="<%= ano_letivo_para_alterar.ano_letivo%>" required>
                        <label for="txtAno" class="form-label"><strong>Ano: *</strong> </label>
                    </div>
                </div>
                <button type="submit" class=" btn btn-primary" id="btn_atualizar">Finalizar Edição</button>
                <a href="/ano_letivo" class="btn btn-dark">Retornar</a>
            
            </section>
        </div> 
    <%}%>
