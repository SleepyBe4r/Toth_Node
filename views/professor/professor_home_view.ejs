<!-- Content Start -->
<div class="container my-5">
  <div class="row">
    
    <!-- Main Section -->
    <div class="col-md-9">

      <!-- Professores Section -->
      <section id="professores" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="text-primary">Professores</h4>
        </div>
        
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th>CPF</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% professores.forEach(professor => { %>
                <tr>
                  <td><%= professor.cpf %></td>
                  <td><%= professor.nome %></td>
                  <td><%= professor.email %></td>
                  <td>
                    <a href="/professor/editar/<%= professor.cpf %>" class="btn btn-sm btn-warning">
                      <i class="fas fa-edit"></i> Editar
                    </a>
                    <form id="deleteForm_<%= professor.cpf %>" 
                          action="/professor/excluir" 
                          method="POST" 
                          enctype="application/x-www-form-urlencoded"
                          style="display: inline;">
                      <input type="hidden" name="cpf" value="<%= professor.cpf %>" required>
                      <button type="submit" 
                              class="btn btn-sm btn-danger" 
                              onclick="return confirm('Tem certeza que deseja excluir o professor? <%= professor.cpf %>?')">
                        <i class="fas fa-trash-alt"></i> Excluir
                      </button>
                    </form>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</div>
<!-- Content End -->