<!-- Content Start -->
<div class="container my-5">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 mb-4">
        <div class="bg-light shadow rounded p-4">
          <h4 class="text-primary">Menu</h4>
          <ul class="list-unstyled">
            <li><a href="/professor" class="text-dark"><i class="fas fa-user-circle"></i> Perfil</a></li>
            <li><a href="/professor" class="text-dark"><i class="fas fa-chalkboard-teacher"></i> Professores</a></li>
            <li><a href="../CRUD/turma/turma_Index.html" class="text-dark"><i class="fas fa-users"></i> Turmas</a></li>
            <li><a href="../CRUD/aluno/notas_Faltas_Create.html" class="text-dark"><i class="fas fa-chart-line"></i> Notas</a></li>
          </ul>
        </div>
      </div>
      <!-- Main Section -->
      <div class="col-md-9">
        <section class="mb-5">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="text-primary">Editar Professor</h4>
            <a href="/professor" class="btn btn-secondary">
              <i class="fas fa-arrow-left"></i> Voltar
            </a>
          </div>
          
          <div class="card shadow">
            <div class="card-body">
              <form action="/professor/editar" method="POST">
                <input type="hidden" name="cpf" value="<%= professor.cpf %>">
                <div class="form-group">
                  <label for="nome"><strong>Nome Completo: *</strong></label>
                  <input type="text" class="form-control" id="nome" name="nome" value="<%= professor.nome %>" required>
                </div>
                <div class="form-group">
                  <label for="titulacao"><strong>Titulação: *</strong></label>
                  <input type="text" class="form-control" id="titulacao" name="titulacao" value="<%= professor.email %>" required>
                </div>
                <div class="form-group">
                  <label for="dt_admissao"><strong>Data de Admissão: *</strong></label>
                  <input type="date" class="form-control" id="dt_admissao" name="dt_admissao" value="<%= professor.telefone || '' %>" required>
                </div>
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save"></i> Salvar Alterações
                </button>
              </form>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
  <!-- Content End -->